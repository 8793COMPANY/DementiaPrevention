<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="end"
    android:background="@color/white"
    android:layout_marginStart="-64dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_section"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.1">

        <TextView
            android:id="@+id/counting_rest"
            android:text="MY"
            android:textSize="24dp"
            android:textColor="@color/black"
            android:fontFamily="@font/pretendard_semibold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"></TextView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/close_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/back_btn"
            android:textColor="@color/black"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintHorizontal_bias="0.04"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/counting_rest"
            app:layout_constraintBottom_toBottomOf="@+id/counting_rest"
            ></androidx.appcompat.widget.AppCompatButton>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="홍갈동님"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:fontFamily="@font/pretendard_semibold"
        android:gravity="center"
        app:layout_constraintVertical_bias="0.07"
        app:layout_constraintTop_toBottomOf="@+id/top_section"
        app:layout_constraintBottom_toBottomOf="parent"
        ></TextView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/user_info_modify_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/gray_rounded_background"
        android:backgroundTint="@color/mint_00b3bc"
        app:layout_constraintTop_toBottomOf="@+id/user_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/user_info_modify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_semibold"
            android:text="정보수정"
            android:textSize="15dp"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:layout_marginRight="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/user_info_modify_icon"
            app:layout_constraintLeft_toLeftOf="parent">
        </TextView>

        <ImageView
            android:id="@+id/user_info_modify_icon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="4dp"
            app:layout_constraintDimensionRatio="1:1"
            android:layout_margin="2dp"
            android:background="@drawable/user_info_modify_icon"
            app:layout_constraintTop_toTopOf="@+id/user_info_modify"
            app:layout_constraintBottom_toBottomOf="@+id/user_info_modify"
            app:layout_constraintLeft_toRightOf="@+id/user_info_modify"
            app:layout_constraintRight_toRightOf="parent"></ImageView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/latest_diagnose_list_section"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintTop_toBottomOf="@+id/user_info_modify_section"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.1">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/left_guide"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.07"></androidx.constraintlayout.widget.Guideline>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/medium_guide"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.18" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/right_guide"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.93"></androidx.constraintlayout.widget.Guideline>

        <ImageView
            android:id="@+id/latest_diagnose_list_icon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/latest_diagnose_list_icon"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintHeight_percent="0.5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/left_guide"></ImageView>

        <TextView
            android:id="@+id/latest_diagnose_list_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="최근 진단 리스트"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/medium_guide"
            app:layout_constraintRight_toLeftOf="@+id/more_btn"></TextView>

        <ImageView
            android:id="@+id/more_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/more_btn"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintHeight_percent="0.35"
            app:layout_constraintTop_toTopOf="@+id/latest_diagnose_list_icon"
            app:layout_constraintBottom_toBottomOf="@+id/latest_diagnose_list_icon"
            app:layout_constraintRight_toRightOf="@+id/right_guide"></ImageView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintVertical_bias="0.03"
        app:layout_constraintTop_toBottomOf="@+id/latest_diagnose_list_section"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/logout_left_guide"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.07"></androidx.constraintlayout.widget.Guideline>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/logout_medium"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.18" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/logout_right_guide"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.93"></androidx.constraintlayout.widget.Guideline>

        <ImageView
            android:id="@+id/logout_icon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/mypage_logout_icon"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintHeight_percent="0.5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/logout_left_guide"></ImageView>

        <TextView
            android:id="@+id/logout_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그아웃"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/logout_medium"></TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/font_section"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.18"
        app:layout_constraintVertical_bias="0.001"
        app:layout_constraintTop_toBottomOf="@+id/logout"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/font_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="글씨 크기"
            android:textColor="@color/mint_00b3bc"
            android:textSize="26dp"
            android:gravity="center"
            android:fontFamily="@font/pretendard_semibold"
            android:includeFontPadding="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/font_select_section"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <RadioGroup
            android:id="@+id/font_select_section"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:weightSum="3"
            app:layout_constraintWidth_percent="0.85"
            app:layout_constraintDimensionRatio="570:60"
            app:layout_constraintTop_toBottomOf="@+id/font_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <RadioButton
                android:id="@+id/big"
                android:checked="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="크게"
                android:button="@null"
                android:layout_weight="1"
                android:textAlignment="center"
                android:background="@drawable/selector_gender_button"
                android:textColor="@drawable/selector_gender_button_text"
                android:layout_marginRight="5dp" />

            <RadioButton
                android:id="@+id/medium"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="중간"
                android:button="@null"
                android:layout_weight="1"
                android:textAlignment="center"
                android:background="@drawable/selector_gender_button"
                android:textColor="@drawable/selector_gender_button_text"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"/>

            <RadioButton
                android:id="@+id/small"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="작게"
                android:button="@null"
                android:layout_weight="1"
                android:textAlignment="center"
                android:background="@drawable/selector_gender_button"
                android:textColor="@drawable/selector_gender_button_text"
                android:layout_marginLeft="5dp" />
        </RadioGroup>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
