<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".diagnose.DiagnosticResultActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_section"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.1">

        <TextView
            android:id="@+id/diagnose_result"
            android:text="진단 결과"
            android:textSize="24dp"
            android:textColor="@color/black"
            android:fontFamily="@font/pretendard_semibold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"></TextView>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/close_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/borderlessButtonStyle"
            android:text="닫기"
            android:textColor="@color/black"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/diagnose_result"
            app:layout_constraintBottom_toBottomOf="@+id/diagnose_result"
            ></androidx.appcompat.widget.AppCompatButton>


    </androidx.constraintlayout.widget.ConstraintLayout>
    
    
    <ProgressBar
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:id="@+id/diagnose_result_progress"
        android:indeterminate="false"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:progressBackgroundTint="#dedff1"
        android:progress="50"
        android:progressTint="@color/mint_00b3bc"
        android:progressDrawable="@drawable/diagnose_result_progress"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintVertical_bias="0.15"
        app:layout_constraintTop_toBottomOf="@+id/top_section"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"></ProgressBar>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="141:41"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintVertical_bias="0.7"
        app:layout_constraintTop_toTopOf="@+id/diagnose_result_progress"
        app:layout_constraintBottom_toTopOf="@+id/result_score_section"
        app:layout_constraintLeft_toLeftOf="@+id/diagnose_result_progress"
        app:layout_constraintRight_toRightOf="@+id/diagnose_result_progress">


        <ImageView
            android:id="@+id/first"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            android:background="@drawable/empty_star_icon"
            app:layout_constraintWidth_percent="0.3"
            app:layout_constraintDimensionRatio="43:41"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/second"
            app:layout_constraintBottom_toBottomOf="parent"></ImageView>


        <ImageView
            android:id="@+id/second"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/empty_star_icon"
            app:layout_constraintWidth_percent="0.3"
            app:layout_constraintDimensionRatio="43:41"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/first"
            app:layout_constraintRight_toLeftOf="@+id/third"
            app:layout_constraintBottom_toBottomOf="parent"></ImageView>


        <ImageView
            android:id="@+id/third"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/empty_star_icon"
            app:layout_constraintWidth_percent="0.3"
            app:layout_constraintDimensionRatio="43:41"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/second"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"></ImageView>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/result_score_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0.65"
        app:layout_constraintTop_toTopOf="@+id/diagnose_result_progress"
        app:layout_constraintBottom_toBottomOf="@+id/diagnose_result_progress"
        app:layout_constraintLeft_toLeftOf="@+id/diagnose_result_progress"
        app:layout_constraintRight_toRightOf="@+id/diagnose_result_progress">

        <TextView
            android:id="@+id/result_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="7"
            android:textSize="35dp"
            android:textColor="@color/black"
            android:fontFamily="@font/pretendard_medium"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/score"></TextView>


        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_medium"
            android:text="/8"
            android:textSize="25dp"
            android:textColor="@color/gray_9f9f9f"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/result_score"
            app:layout_constraintBottom_toBottomOf="parent"></TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/result_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:fontFamily="@font/pretendard_medium"
        android:text="홍길동님은\n치매 안심입니다."
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintTop_toBottomOf="@+id/diagnose_result_progress"
        app:layout_constraintBottom_toBottomOf="parent"></TextView>





    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/go_lately_diagnose_list"
        layout="@layout/check_choice_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="최근 진단리스트 보기"
        android:textSize="18dp"
        android:fontFamily="@font/pretendard_semibold"
        android:background="@drawable/correct_btn_off"
        android:backgroundTint="@color/gray_f4f6fa"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintWidth_percent="0.65"
        android:layout_marginBottom="20dp"
        app:layout_constraintDimensionRatio="478:110"
        app:layout_constraintTop_toBottomOf="@+id/result_text"
        app:layout_constraintBottom_toTopOf="@+id/go_main_activity"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"></androidx.appcompat.widget.AppCompatButton>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/go_main_activity"
        layout="@layout/check_choice_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="메인화면으로 가기"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:fontFamily="@font/pretendard_semibold"
        android:background="@drawable/correct_btn_off"
        android:backgroundTint="@color/mint_00b3bc"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintWidth_percent="0.65"
        app:layout_constraintDimensionRatio="478:110"
        app:layout_constraintTop_toBottomOf="@+id/go_lately_diagnose_list"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"></androidx.appcompat.widget.AppCompatButton>


</androidx.constraintlayout.widget.ConstraintLayout>