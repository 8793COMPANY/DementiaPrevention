<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.drawerlayout.widget.DrawerLayout
    android:id="@+id/dl_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <Button
                android:id="@+id/seoul"
                android:text="seoul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent">
            </Button>

            <Button
                android:id="@+id/daegu"
                android:text="daegu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="100dp"
                app:layout_constraintLeft_toLeftOf="parent">
            </Button>

            <Button
                android:id="@+id/gwangju"
                android:text="gwangu"
                android:layout_marginLeft="100dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent">
            </Button>

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="0dp"
                android:layout_height="50dp"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:progressDrawable="@drawable/progress"
                android:max="100"
                app:layout_constraintWidth_percent="0.9"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/timeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:textColor="#000000"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/progressBar"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <Button
                android:id="@+id/startBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시작"
                app:layout_constraintVertical_bias="0.1"
                app:layout_constraintTop_toBottomOf="@id/progressBar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <Button
                android:id="@+id/whacAMoleBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="두더지 게임"
                app:layout_constraintVertical_bias="0.1"
                app:layout_constraintTop_toBottomOf="@id/startBtn"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <Button
                android:id="@+id/mapBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="네이버 지도"
                app:layout_constraintVertical_bias="0.1"
                app:layout_constraintTop_toBottomOf="@id/whacAMoleBtn"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/app_bar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/guide_left"
            app:layout_constraintRight_toRightOf="@+id/guide_right">
            
            <ImageView
                android:id="@+id/app_name_icon"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/app_logo_icon"
                app:layout_constraintWidth_percent="0.21"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintDimensionRatio="148:40"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"></ImageView>

            <ImageButton
                android:id="@+id/noti_btn"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintWidth_percent="0.06"
                android:background="@drawable/home_noti_icon"
                android:layout_marginRight="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/menu_btn"></ImageButton>



            <ImageButton
                android:id="@+id/menu_btn"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintWidth_percent="0.06"
                android:background="@drawable/home_menu_btn"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"></ImageButton>

            
            
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="홍길동님,"
            android:textStyle="bold"
            android:fontFamily="@font/pretendard_bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/app_bar"
            app:layout_constraintLeft_toLeftOf="@+id/guide_left"></TextView>

        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="반갑습니다!"
            android:textStyle="bold"
            android:fontFamily="@font/pretendard_bold"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/app_bar"
            app:layout_constraintLeft_toRightOf="@+id/user_name"></TextView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/latest_diagnose"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#e0fafc"
            app:layout_constraintVertical_bias="0.05"
            app:layout_constraintHeight_percent="0.11"
            app:layout_constraintTop_toBottomOf="@+id/user_name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/guide_left"
            app:layout_constraintRight_toRightOf="@+id/guide_right">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/middle_guide_center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.5"></androidx.constraintlayout.widget.Guideline>


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/middle_guide_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.06"></androidx.constraintlayout.widget.Guideline>


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/middle_guide_right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.95"></androidx.constraintlayout.widget.Guideline>


            <ImageView
                android:id="@+id/diagnose_icon"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/latest_diagnose_icon"
                app:layout_constraintDimensionRatio="41:56"
                app:layout_constraintWidth_percent="0.06"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="@+id/middle_guide_left"
                app:layout_constraintBottom_toBottomOf="parent"></ImageView>


            <TextView
                android:id="@+id/latest_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_light"
                android:text="2025년 4월 10일"
                android:textColor="@color/black"
                app:layout_constraintVertical_bias="0.8"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/middle_guide_center"
                app:layout_constraintLeft_toRightOf="@+id/diagnose_icon"
                app:layout_constraintRight_toRightOf="parent"
                ></TextView>


            <TextView
                android:id="@+id/latest_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_medium"
                android:text="치매가 의심돼요/ 우울증이 의심돼요"
                android:textColor="@color/black"
                android:textSize="15dp"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintTop_toBottomOf="@+id/middle_guide_center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@+id/latest_date"></TextView>


        </androidx.constraintlayout.widget.ConstraintLayout>


        <include
            android:id="@+id/diagnose_btn"
            layout="@layout/home_func_btn_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:titleText="@{`진단하기`}"
            app:introText="@{`내 주변 병원을\n찾아보세요`}"
            app:foo="@{0}"
            app:icon="@{@drawable/home_diagnose_btn_icon}"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintWidth_percent="0.42"
            app:layout_constraintDimensionRatio="308:283"
            app:layout_constraintTop_toBottomOf="@+id/latest_diagnose"
            app:layout_constraintBottom_toTopOf="@+id/find_center_btn"
            app:layout_constraintLeft_toLeftOf="@+id/guide_left"
            app:layout_constraintRight_toLeftOf="@+id/game_btn"/>


        <include
            android:id="@+id/game_btn"
            layout="@layout/home_func_btn_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:titleText="@{`뇌 기능 게임`}"
            app:introText="@{`암기능력, 순발력,\n기억력을 길러보세요`}"
            app:foo="@{1}"
            app:icon="@{@drawable/home_game_btn_icon}"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintWidth_percent="0.42"
            app:layout_constraintDimensionRatio="308:283"
            app:layout_constraintTop_toBottomOf="@+id/latest_diagnose"
            app:layout_constraintBottom_toTopOf="@+id/chat_btn"
            app:layout_constraintLeft_toRightOf="@+id/diagnose_btn"
            app:layout_constraintRight_toRightOf="@+id/guide_right"/>

        <include
            android:id="@+id/find_center_btn"
            layout="@layout/home_func_btn_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:titleText="@{`치매안심센터`}"
            app:introText="@{`간편한 자가진단\n테스트`}"
            app:foo="@{1}"
            app:icon="@{@drawable/home_find_center_btn_icon}"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintWidth_percent="0.42"
            app:layout_constraintDimensionRatio="308:283"
            app:layout_constraintTop_toBottomOf="@+id/diagnose_btn"
            app:layout_constraintBottom_toTopOf="@+id/banner_section"
            app:layout_constraintLeft_toLeftOf="@+id/guide_left"
            app:layout_constraintRight_toLeftOf="@+id/chat_btn"/>


        <include
            android:id="@+id/chat_btn"
            layout="@layout/home_func_btn_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:titleText="@{`대화하기`}"
            app:introText="@{`치매안내센터를\n안내해드려요`}"
            app:foo="@{1}"
            app:icon="@{@drawable/home_chat_btn_icon}"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintWidth_percent="0.42"
            app:layout_constraintDimensionRatio="308:283"
            app:layout_constraintTop_toBottomOf="@+id/game_btn"
            app:layout_constraintBottom_toTopOf="@+id/banner_section"
            app:layout_constraintLeft_toRightOf="@+id/find_center_btn"
            app:layout_constraintRight_toRightOf="@+id/guide_right"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/banner_section"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#efefef"
            app:layout_constraintHeight_percent="0.18"
            app:layout_constraintBottom_toBottomOf="parent"></androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05"></androidx.constraintlayout.widget.Guideline>


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95"></androidx.constraintlayout.widget.Guideline>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        android:id="@+id/in_view_drawer"
        layout="@layout/view_drawer"/>

</androidx.drawerlayout.widget.DrawerLayout>

</layout>