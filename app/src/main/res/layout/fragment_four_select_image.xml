<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="com.corporation8793.dementia.diagnose.FourSelectImageViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        tools:context=".diagnose.FourSelectImageFragment">

        <TextView
            android:id="@+id/question_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="다음 그림에 들어갈\n모양은 무엇일까요?"
            android:textSize="22dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:fontFamily="@font/pretendard_medium"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:id="@+id/question_img"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="310:102"
            app:layout_constraintWidth_percent="0.86"
            app:layout_constraintVertical_bias="0.05"
            app:layout_constraintTop_toBottomOf="@+id/question_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <include
            android:id="@+id/choice1"
            layout="@layout/check_image_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:choice="@{false}"
            app:choiceImg="@{viewModel.questionOne}"
            app:layout_constraintVertical_bias="0.45"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintWidth_percent="0.41"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintDimensionRatio="147:119"
            app:layout_constraintTop_toBottomOf="@+id/question_img"
            app:layout_constraintBottom_toTopOf="@+id/choice3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/choice2" />

        <include
            android:id="@+id/choice2"
            layout="@layout/check_image_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:choice="@{false}"
            app:choiceImg="@{viewModel.questionTwo}"
            app:layout_constraintVertical_bias="0.45"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintWidth_percent="0.41"
            android:layout_marginBottom="20dp"
            app:layout_constraintDimensionRatio="147:119"
            app:layout_constraintTop_toBottomOf="@+id/question_img"
            app:layout_constraintBottom_toTopOf="@+id/choice4"
            app:layout_constraintLeft_toRightOf="@+id/choice1"
            app:layout_constraintRight_toRightOf="parent" />

        <include
            android:id="@+id/choice3"
            layout="@layout/check_image_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:choice="@{false}"
            app:choiceImg="@{viewModel.questionThree}"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintWidth_percent="0.41"
            android:layout_marginRight="20dp"
            app:layout_constraintDimensionRatio="147:119"
            app:layout_constraintTop_toBottomOf="@+id/choice1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/choice4" />

        <include
            android:id="@+id/choice4"
            layout="@layout/check_image_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:choice="@{false}"
            app:choiceImg="@{viewModel.questionFour}"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintWidth_percent="0.41"
            app:layout_constraintDimensionRatio="147:119"
            app:layout_constraintTop_toBottomOf="@+id/choice2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/choice3"
            app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>