<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".game.ResultActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_section"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.1">

        <TextView
            android:id="@+id/diagnose_result"
            android:text="게임 결과"
            android:textSize="24dp"
            android:textColor="@color/black"
            android:fontFamily="@font/pretendard_semibold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"></TextView>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/close_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/borderlessButtonStyle"
            android:text="닫기"
            android:textColor="@color/black"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/diagnose_result"
            app:layout_constraintBottom_toBottomOf="@+id/diagnose_result"
            ></androidx.appcompat.widget.AppCompatButton>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageView
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:id="@+id/diagnose_result_progress"
        android:indeterminate="false"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/game_result_trophy_icon"
        app:layout_constraintDimensionRatio="210:184"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintVertical_bias="0.13"
        app:layout_constraintTop_toBottomOf="@+id/top_section"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"></ImageView>







    <TextView
        android:id="@+id/result_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:fontFamily="@font/pretendard_semibold"
        android:text="와우! 잘하셨어요!"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/diagnose_result_progress"></TextView>


    <TextView
        android:id="@+id/score_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="홍길동님은"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:fontFamily="@font/pretendard_medium"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintTop_toBottomOf="@+id/result_text"
        app:layout_constraintBottom_toTopOf="@+id/retry_btn"
        ></TextView>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/retry_btn"
        layout="@layout/check_choice_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="다시하기"
        android:textSize="18dp"
        android:fontFamily="@font/pretendard_semibold"
        android:background="@drawable/correct_btn_off"
        android:backgroundTint="@color/gray_f4f6fa"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintWidth_percent="0.65"
        android:layout_marginBottom="20dp"
        app:layout_constraintVertical_bias="0.7"
        app:layout_constraintDimensionRatio="478:110"
        app:layout_constraintTop_toBottomOf="@+id/result_text"
        app:layout_constraintBottom_toTopOf="@+id/out_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"></androidx.appcompat.widget.AppCompatButton>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/out_btn"
        layout="@layout/check_choice_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="나가기"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:fontFamily="@font/pretendard_semibold"
        android:background="@drawable/correct_btn_off"
        android:backgroundTint="@color/mint_00b3bc"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintWidth_percent="0.65"
        app:layout_constraintDimensionRatio="478:110"
        app:layout_constraintTop_toBottomOf="@+id/retry_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"></androidx.appcompat.widget.AppCompatButton>


</androidx.constraintlayout.widget.ConstraintLayout>