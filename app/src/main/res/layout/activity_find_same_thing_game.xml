<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".game.find_same_thing.FindSameThingGame">


    <include
        android:id="@+id/top_section"
        layout="@layout/count_time_close_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintHeight_percent="0.16"></include>

    <TextView
        android:id="@+id/notice_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0.08"
        android:gravity="center"
        android:fontFamily="@font/pretendard_semibold"
        android:textColor="@color/black"
        android:textSize="23dp"
        android:text="색상이 같은 원들을\n이어보세요"
        app:layout_constraintTop_toBottomOf="@+id/top_section"
        app:layout_constraintBottom_toBottomOf="parent"></TextView>

    
    <com.corporation8793.dementia.game.find_same_thing.PatternLockView
        android:id="@+id/patternLockView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/notice_text"
        app:layout_constraintBottom_toBottomOf="parent"
        ></com.corporation8793.dementia.game.find_same_thing.PatternLockView>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>