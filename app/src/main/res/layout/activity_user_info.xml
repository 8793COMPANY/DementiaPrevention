<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.UserEditActivity"
    >
    <data>
        <variable
            name="title"
            type="String"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/top_section"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/gray_f7f7f7"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.1">

            <TextView
                android:id="@+id/counting_rest"
                android:text="정보수정"
                android:textSize="24dp"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard_semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"></TextView>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/close_btn"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/back_btn"
                android:textColor="@color/black"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintHorizontal_bias="0.04"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/counting_rest"
                app:layout_constraintBottom_toBottomOf="@+id/counting_rest"
                ></androidx.appcompat.widget.AppCompatButton>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/top_section"
                app:layout_constraintBottom_toBottomOf="parent">
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/left_guideline"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    bind:layout_constraintGuide_percent="0.03"></androidx.constraintlayout.widget.Guideline>


                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/right_guideline"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    bind:layout_constraintGuide_percent="0.97"></androidx.constraintlayout.widget.Guideline>

                <TextView
                    android:id="@+id/info_intro_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:fontFamily="@font/pretendard_medium"
                    android:text="프로필 정보를 수정해주세요"
                    app:layout_constraintVertical_bias="0.1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"></TextView>


                <TextView
                    android:id="@+id/id_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="이름"
                    android:gravity="center"
                    android:textColor="@color/mint_00b3bc"
                    android:textSize="14dp"
                    android:fontFamily="@font/pretendard_medium"
                    android:includeFontPadding="false"
                    android:layout_marginTop="10dp"
                    bind:layout_constraintVertical_bias="0"
                    app:layout_constraintTop_toBottomOf="@+id/info_intro_text"
                    app:layout_constraintBottom_toTopOf="@+id/id_input_box"
                    bind:layout_constraintLeft_toLeftOf="@id/left_guideline"
                    bind:layout_constraintRight_toRightOf="@id/right_guideline"
                    ></TextView>

                <EditText
                    android:id="@+id/id_input_box"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="433:80"
                    app:layout_constraintWidth_percent="0.6"
                    android:textSize="14dp"
                    android:hint="홍길동"
                    android:maxLines="1"
                    android:gravity="center"
                    app:layout_constraintVertical_bias="0"
                    android:background="@drawable/gray_rounded_background"
                    bind:layout_constraintTop_toBottomOf="@+id/id_text"
                    app:layout_constraintBottom_toTopOf="@+id/gender_text"
                    bind:layout_constraintLeft_toLeftOf="@+id/left_guideline"
                    bind:layout_constraintRight_toLeftOf="@+id/right_guideline"
                    android:singleLine="true"
                    android:enabled="false"
                    ></EditText>




                <TextView
                    android:id="@+id/gender_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="성별"
                    android:textColor="@color/mint_00b3bc"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:fontFamily="@font/pretendard_medium"
                    android:includeFontPadding="false"
                    android:layout_marginTop="3dp"
                    bind:layout_constraintVertical_bias="0"
                    bind:layout_constraintTop_toBottomOf="@+id/id_input_box"
                    app:layout_constraintBottom_toTopOf="@+id/gender_select_section"
                    bind:layout_constraintLeft_toLeftOf="@id/left_guideline"
                    bind:layout_constraintRight_toRightOf="@id/right_guideline"
                    ></TextView>

             <RadioGroup
                 android:id="@+id/gender_select_section"
                 android:layout_width="0dp"
                 android:layout_height="0dp"
                 android:orientation="horizontal"
                 android:weightSum="2"
                 app:layout_constraintWidth_percent="0.8"
                 app:layout_constraintDimensionRatio="570:80"
                 app:layout_constraintTop_toBottomOf="@+id/gender_text"
                 app:layout_constraintBottom_toTopOf="@+id/birthday_text"
                 bind:layout_constraintLeft_toLeftOf="@id/left_guideline"
                 bind:layout_constraintRight_toRightOf="@id/right_guideline">

                 <RadioButton
                     android:checked="true"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:text="여자"
                     android:button="@null"
                     android:layout_weight="1"
                     android:textAlignment="center"
                     android:background="@drawable/selector_gender_button"
                     android:textColor="@drawable/selector_gender_button_text"
                     android:layout_marginRight="5dp"></RadioButton>


                 <RadioButton
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:text="남자"
                     android:button="@null"
                     android:layout_weight="1"
                     android:textAlignment="center"
                     android:background="@drawable/selector_gender_button"
                     android:textColor="@drawable/selector_gender_button_text"
                     android:layout_marginLeft="5dp"></RadioButton>

             </RadioGroup>





                <TextView
                    android:id="@+id/birthday_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="생년월일"
                    android:textColor="@color/mint_00b3bc"
                    android:gravity="center"
                    android:textSize="14dp"
                    android:fontFamily="@font/pretendard_medium"
                    android:includeFontPadding="false"
                    android:layout_marginTop="10dp"
                    bind:layout_constraintVertical_bias="0"
                    bind:layout_constraintTop_toBottomOf="@+id/gender_select_section"
                    app:layout_constraintBottom_toTopOf="@+id/birthday_input"
                    bind:layout_constraintLeft_toLeftOf="@id/left_guideline"
                    bind:layout_constraintRight_toRightOf="@id/right_guideline"
                    ></TextView>

                <EditText
                    android:id="@+id/birthday_input"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="433:80"
                    app:layout_constraintWidth_percent="0.62"
                    android:textSize="14dp"
                    android:hint="생년월일"
                    android:maxLines="1"
                    android:gravity="center"
                    android:background="@drawable/gray_rounded_background"
                    bind:layout_constraintTop_toBottomOf="@+id/birthday_text"
                    app:layout_constraintBottom_toTopOf="@+id/region_text"
                    bind:layout_constraintLeft_toLeftOf="@+id/left_guideline"
                    bind:layout_constraintRight_toLeftOf="@+id/right_guideline"
                    android:singleLine="true"
                    android:enabled="false"
                    ></EditText>




                <TextView
                    android:id="@+id/region_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="지역"
                    android:textColor="@color/mint_00b3bc"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:fontFamily="@font/pretendard_medium"
                    android:includeFontPadding="false"
                    android:layout_marginTop="10dp"
                    bind:layout_constraintVertical_bias="0"
                    bind:layout_constraintTop_toBottomOf="@+id/birthday_input"
                    app:layout_constraintBottom_toTopOf="@+id/region_input_box"
                    bind:layout_constraintLeft_toLeftOf="@id/left_guideline"
                    bind:layout_constraintRight_toRightOf="@id/right_guideline"
                    ></TextView>

                <EditText
                    android:id="@+id/region_input_box"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="433:80"
                    app:layout_constraintWidth_percent="0.62"
                    android:textSize="14dp"
                    android:hint="광주광역시 동구"
                    android:gravity="center"
                    app:layout_constraintVertical_bias="0"
                    android:background="@drawable/gray_rounded_background"
                    bind:layout_constraintTop_toBottomOf="@+id/region_text"
                    bind:layout_constraintLeft_toLeftOf="@+id/left_guideline"
                    bind:layout_constraintRight_toRightOf="@+id/right_guideline"
                    app:layout_constraintBottom_toTopOf="@+id/confirm_btn"
                    android:singleLine="true"

                    ></EditText>




            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/confirm_btn"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="확인"
                android:textColor="@color/white"
                android:background="@drawable/correct_btn_off"
                android:backgroundTint="@color/mint_00b3bc"
                app:layout_constraintVertical_bias="0.9"
                app:layout_constraintHeight_percent="0.1"
                app:layout_constraintTop_toBottomOf="@+id/region_input_box"
                app:layout_constraintLeft_toLeftOf="@id/left_guideline"
                app:layout_constraintRight_toRightOf="@+id/right_guideline"
                app:layout_constraintBottom_toBottomOf="parent"></androidx.appcompat.widget.AppCompatButton>







        </androidx.constraintlayout.widget.ConstraintLayout>




        </androidx.constraintlayout.widget.ConstraintLayout>







</layout>