<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".game.WhacAMoleActivity">

    <TextView
        android:id="@+id/countDownTimerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30.000"
        android:textSize="30dp"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintTop_toTopOf="@+id/guide_timer_text_top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/scoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="40dp"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintTop_toTopOf="@+id/guide_score_text_top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/firstMoleBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/mole_hole"
        android:adjustViewBounds="true"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintTop_toTopOf="@id/guide_top"
        app:layout_constraintBottom_toBottomOf="@id/guide_top2"
        app:layout_constraintLeft_toLeftOf="@id/guide_left"
        app:layout_constraintRight_toRightOf="@id/guide_right"/>

    <ImageView
        android:id="@+id/secondMoleBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/mole_hole"
        android:adjustViewBounds="true"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintTop_toTopOf="@id/guide_top"
        app:layout_constraintBottom_toBottomOf="@id/guide_top2"
        app:layout_constraintLeft_toRightOf="@id/firstMoleBtn"
        app:layout_constraintRight_toLeftOf="@id/thirdMoleBtn"/>

    <ImageView
        android:id="@+id/thirdMoleBtn"
