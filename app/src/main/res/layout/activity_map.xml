<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white_ffffff"
        app:layout_constraintHeight_percent="0.103"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/select_si"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/map_select_background"
            android:fontFamily="@font/pretendard_medium"
            android:textColor="#383838"
            android:gravity="center|left"
            android:text="시선택"
            app:layout_constraintWidth_percent="0.294"
            app:layout_constraintHeight_percent="0.53"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/guide_left_si"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/select_gu"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/map_select_background"
            android:fontFamily="@font/pretendard_medium"
            android:textColor="#383838"
            android:gravity="center|left"
            android:text="구선택"
            app:layout_constraintWidth_percent="0.294"
            app:layout_constraintHeight_percent="0.53"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/guide_left_gu"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/close_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/pretendard_regular"
            android:gravity="center"
            android:text="닫기"
            android:textColor="@color/black"
            app:layout_constraintWidth_percent="0.217"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_left_si"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.042" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_left_gu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.35" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <fragment
        android:id="@+id/naverMap"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:name="com.naver.maps.map.MapFragment"
        app:layout_constraintTop_toBottomOf="@+id/top_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/seoul"
        android:text="seoul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/top_bar"
        app:layout_constraintLeft_toLeftOf="parent">
    </Button>

    <Button
        android:id="@+id/daegu"
        android:text="daegu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/top_bar"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent">
    </Button>

    <Button
        android:id="@+id/gwangju"
        android:text="gwangu"
        android:layout_marginLeft="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/top_bar"
        app:layout_constraintLeft_toLeftOf="parent">
    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>